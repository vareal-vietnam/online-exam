<% provide :title, t(".all_users") %>
<h1 class="text-center"><%= t ".all_users" %></h1>

<%= will_paginate %>

<div class="header text-right">
  <%= link_to new_user_path, class: "btn btn-primary" do %>
    <i class="fa fa-plus"></i> <%= t ".create" %>
  <% end %>
</div>
<div class="table-responsive">
  <table class="table table-striped table-responsive">
    <thead class="thead-dark">
      <tr>
        <th><%= t ".id" %></th>
        <th><%= t ".user_name" %></th>
        <th><%= t ".user_email" %></th>
        <th class="text-center"><%= t".view" %></th>
        <th class="text-center"><%= t".update" %></th>
        <th class="text-center"><%= t".delete" %></th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.id %></td>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td class="text-center">
            <%= link_to user, class: "button" do %>
              <i class="fa fa-street-view"></i>
            <% end %>
          </td>

          <td class="text-center">
            <%= link_to edit_user_path user, class: "button" do %>
              <i class="fa fa-edit"></i>
            <% end %>
          </td>

          <td class="text-center">
            <% unless current_user == user %>
              <%= link_to user, class: "button", method: :delete, data: { confirm: t(".confirm_delete") } do %>
                <i class="fa fa-user-times"></i>
              <% end %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= will_paginate %>
